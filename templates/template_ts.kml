{% import 'track_macro.kml' as track_macro -%}
{% import 'surface_event_macro.kml' as surface_event_macro -%}
{% import 'text_box_macro.kml' as text_box_macro -%}
<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2" xmlns:gx="http://www.google.com/kml/ext/2.2" xmlns:kml="http://www.opengis.net/kml/2.2" xmlns:atom="http://www.w3.org/2005/Atom">
<Folder id="{{ glider_name }}-test">
	<name>{{ glider_name }}</name>
	<Snippet maxLines="2">Updated: {{ ts_now }} GMT</Snippet>
	<styleUrl>#{{ glider_name }}</styleUrl>
	<Placemark id="currentPosition">
		<name>Last Surfacing</name>
		<Snippet maxLines="2">2024-02-23 19:37 GMT</Snippet>
		<TimeSpan>
			<begin>2024-02-15T19:25:27Z</begin>
		</TimeSpan>
		<styleUrl>#{{ glider_name }}Position</styleUrl>
		{{ text_box_macro.track_snippet(glider_tail,last_surfacing_info) }}
		<Point>
			<altitudeMode>absolute</altitudeMode>
			<coordinates>-72.92400000000001,39.5764,4.999999999999999</coordinates>
		</Point>
	</Placemark>
	<Placemark id="deploymentLocation">
		<name>Deployment Location</name>
		<Snippet maxLines="2">2024-02-15 19:25</Snippet>
		<TimeStamp><when>2024-02-15T19:25:27Z</when>
</TimeStamp>
		<styleUrl>#{{ glider_name }}Deployment</styleUrl>
		{{ text_box_macro.track_snippet(glider_tail,deployment_info) }}
		<Point>
			<altitudeMode>absolute</altitudeMode>
			<coordinates>-73.8516,40.2097,4.999999999999999</coordinates>
		</Point>
	</Placemark>
	<Placemark>
		<name>Current Waypoint: {{ glider_name }}</name>
		<Snippet maxLines="2">Since: 2024-02-23 19:44</Snippet>
		<description>3929.039 -7245.996</description>
		<styleUrl>#r{{ glider_name }}Waypoint</styleUrl>
		<Point>
			<altitudeMode>absolute</altitudeMode>
			<coordinates>-72.7666,39.484,4.999999999999999</coordinates>
		</Point>
	</Placemark>
	<Folder id="track">
		<name>Track</name>
		<Snippet maxLines="3">132.25 km flown
8.01 days deployed
530 Iridium Minutes</Snippet>
		{{ track_macro.track_snippet(glider_name,track_info) }}
	</Folder>
	<Folder id="surfaceEvents">
		<name>Surface Events</name>
		{{ surface_event_macro.surfacing(glider_name,surface_event_info) }}
	</Folder>
</Folder>
</kml>
